{
  "manifest_version": 2,
  "name": "TabSearch",
  "version": "0.2.0",
  "description": "Keyboard-accessible Tab Management",
  "applications": {
    "gecko": {
      "strict_min_version": "52.0a1"
    }
  },
  "options_ui": {
    "page": "options/index.html"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "storage"
  ],
  "icon": {
    "32": "assets/search.svg",
    "48": "assets/search.svg"
  },
  "browser_action": {
    "default_icon": "assets/search.svg",
    "default_title": "SearchTab",
    "default_popup": "popup/index.html"
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+L"
      },
      "description": "Execute this browser action"
    }
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self';"
}
